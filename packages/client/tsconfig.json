{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "typed/*"
      ]
    },
    "lib": [
      "DOM"
    ],
  },
  "include": ["src", "typed"],
  "exclude": ["node_modules", "test"],
}
